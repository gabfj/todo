<p id="notice"><%= notice %></p>

<h1>Todo Lists</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Inicio</th>
      <th>Termino</th>
      <th>Responsable</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td><%= todo_list.nombre %></td>
        <td><%= todo_list.inicio %></td>
        <td><%= todo_list.termino %></td>
        <td><%= todo_list.responsable %></td>
        <td><%= todo_list.estado %></td>
        <td><%= link_to 'Ver', todo_list %></td>
        <td><%= link_to 'Editar', edit_todo_list_path(todo_list) %></td>
        <td><%= link_to 'Eliminar', todo_list, method: :delete, data: { confirm: 'EstÃ¡ seguro de eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

